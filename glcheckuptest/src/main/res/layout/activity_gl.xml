<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.shibastudio.glcheckuptest.GLActivity">

    <ch.shibastudio.glcheckuptest.CheckupGLSurfaceView
        android:id="@+id/gameSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.78"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/press_less"
            android:textSize="@dimen/guidance_text_size"
            android:textAlignment="center"
            android:textColor="@color/guidance_text"
            android:shadowColor="@color/shadow"
            android:shadowRadius="2"
            android:shadowDy="1"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>
